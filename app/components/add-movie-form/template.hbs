<form class={{this.styleNamespace}} {{on 'submit' this.addMovie}}>
  <label id='form-title'>
    Title
    <Input
      @type='text'
      @value={{this.title}}
      class='form-title'
      placeholder='Title..'
      required={{true}}
    />
  </label>

  <label id='form-description'>
    Description
    <Input
      @type='text'
      @value={{this.description}}
      class='form-description'
      placeholder='Description..'
      required={{true}}
    />
  </label>

  <label id='form-rating'>
    Rating
    <Input
      @type='number'
      @value={{this.rating}}
      min="0"
      max="5"
      class='form-rating'
      placeholder='Rating..'
      required={{true}}
    />
  </label>

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type='submit'>
    Add Movie
  </button>
</form>